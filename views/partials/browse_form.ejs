<div class="container">
    <div class = "row" style="margin: 1% auto 2%; padding: 5px 5px">
        <form class="center">
            <select id="selector" style="max-width: fit-content; padding: 5.5px;">
                <% for(var i = 0; i < locations.length; i++){ %>
                    <option value="<%= locations[i].link %>"><%= locations[i].txt %></option>
                <% } %>
            </select>
            <a id="findHotels" class="btn btn-primary" href="" role="button">Find Hotels</a>
            <a id="reviseSearch" class="btn btn-primary" href="/browse" role="button">Revise Search</a>
            <a id="returnToSearch" class="btn btn-primary" href="/browse/<%= hotel.prevLink %>" role="button">Return to
                Search</a>
        </form>
    </div>
</div>

<% for(var i = 0; i < hotels.length; i++){ %>
    <% var hotel = hotels[i]; %>
        <div class="row">
            <div class="col-md-7">
                <a href="/<%= hotel.link %>">
                    <img class="img-responsive" src="/img/<%= hotel.image %>" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <div class="h3"><%= hotel.name %></div>
                <div class="h4">Location: <br>
                    <span class="notranslate">
                        <small>
                            <%= hotel.address.compiled_ln1%>
                            <br>
                            <%= hotel.address.compiled_ln2%>
                        </small>
                    </span>
                </div>
                <%- hotel.description1 %>
                <a class="btn btn-primary" href="/<%= hotel.link %>">Check Room Availability<span
                            class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
        </div>
        <!-- /.row -->
        <hr>
<% } %>